<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://jmix.io/schema/ui/window"
        caption="msg://browseCaption"
        focusComponent="ordersTable">
    <data readOnly="true">
        <collection id="ordersDc"
                    class="io.jmix.sampler.entity.Order">
            <fetchPlan extends="_local">
                <property name="customer" fetchPlan="_local"/>
            </fetchPlan>
            <loader id="ordersDl">
                <query>
                    <![CDATA[select e from sampler_Order e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="ordersTable"
            spacing="true">
        <!-- todo filter
        <filter id="filter"
                applyTo="ordersTable"
                dataLoader="ordersDl">
            <properties include=".*"/>
        </filter>-->
        <groupTable id="ordersTable"
                    width="100%"
                    dataContainer="ordersDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="customer"/>
                <column id="date"/>
                <column id="amount"/>
                <column id="description"/>
            </columns>
            <pagination/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="ordersTable.create"/>
                <button id="editBtn" action="ordersTable.edit"/>
                <button id="removeBtn" action="ordersTable.remove"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
