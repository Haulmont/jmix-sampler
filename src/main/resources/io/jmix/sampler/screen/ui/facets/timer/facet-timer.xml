<window xmlns="http://jmix.io/schema/ui/window">
    <facets>
        <timer id="timer"
               autostart="false"
               delay="5000"
               repeating="true"/>
    </facets>
    <layout>
        <hbox spacing="true">
            <button id="startTimer"
                    caption="Start"
                    icon="PLAY"/>
            <button id="stopTimer"
                    caption="Stop"
                    icon="STOP"/>
            <label id="statusLabel"
                   align="MIDDLE_LEFT"
                   value="Timer is not running"/>
        </hbox>
    </layout>
</window>
