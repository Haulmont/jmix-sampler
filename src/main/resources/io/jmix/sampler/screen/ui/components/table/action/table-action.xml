<window xmlns="http://jmix.io/schema/ui/window">
    <data>
        <collection id="customersDc"
                    class="io.jmix.sampler.entity.Customer"
                    fetchPlan="_local">
            <loader id="customersLoader">
                <query>
                    <![CDATA[select e from sampler_Customer e]]>
                </query>
            </loader>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
    </facets>
    <layout>
        <table id="customerTable"
               dataContainer="customersDc"
               height="100%"
               width="100%">
            <actions>
                <!-- todo Haulmont/jmix-sampler#23 -->
                <action id="create" type="create" enable="false"/>
                <action id="edit" type="edit" enable="false"/>
                <action id="view" type="view"/>
                <action id="remove" type="remove" enable="false"/>
                <action id="greeting" caption="Greeting"/>
            </actions>
            <columns>
                <column id="name"/>
                <column id="lastName"/>
                <column id="age"/>
                <column id="active"/>
                <column id="grade"/>
            </columns>
            <buttonsPanel>
                <button action="customerTable.create"/>
                <button action="customerTable.edit"/>
                <button action="customerTable.view"/>
                <button action="customerTable.remove"/>
                <button action="customerTable.greeting"/>
            </buttonsPanel>
        </table>
    </layout>
</window>
