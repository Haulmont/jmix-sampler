<window xmlns="http://jmix.io/schema/ui/window">
    <layout>
        <cssLayout stylename="jmix-drawer-layout" width="100%" height="300px">
            <drawer id="drawer" expandOnHover="true">
                <cssLayout stylename="jmix-drawer-header">
                    <label id="headerLabel" value="Header"/>
                </cssLayout>
                <cssLayout stylename="jmix-drawer-content" align="MIDDLE_CENTER">
                    <label id="contentLabel" value="Content"/>
                </cssLayout>
                <cssLayout stylename="jmix-drawer-footer">
                    <button id="toggleDrawerButton"
                            stylename="jmix-drawer-collapse-button"
                            icon="BARS"/>
                </cssLayout>
            </drawer>
        </cssLayout>
    </layout>
</window>
