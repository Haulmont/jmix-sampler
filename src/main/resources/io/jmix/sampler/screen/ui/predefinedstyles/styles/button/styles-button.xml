<window xmlns="http://jmix.io/schema/ui/window">
    <layout expand="spacer"
            spacing="true">
        <hbox spacing="true">
            <groupBox caption="Icon styles"
                      spacing="true"
                      orientation="horizontal">
                <groupBox caption="Button"
                          spacing="true">
                    <button id="iconAlignRightButton"
                            caption="icon-align-right"
                            icon="UPLOAD"
                            stylename="icon-align-right"/>
                    <button id="iconAlignTopButton"
                            caption="icon-align-top"
                            icon="UPLOAD"
                            stylename="icon-align-top"/>
                    <label value="icon-only:"/>
                    <button id="iconOnlyButton"
                            caption="icon-only"
                            icon="UPLOAD"
                            stylename="icon-only"/>
                </groupBox>
                <groupBox caption="PopupButton"
                          spacing="true">
                    <popupButton id="iconAlignRightPopupButton"
                                 caption="icon-align-right"
                                 icon="SAVE"
                                 stylename="icon-align-right">
                        <actions>
                            <action id="saveAsDocAction"
                                    caption="msg://io.jmix.sampler.screen.ui.components.popupbutton.simple/saveAsDocAction.caption"/>
                            <action id="saveAsPdfAction"
                                    caption="msg://io.jmix.sampler.screen.ui.components.popupbutton.simple/saveAsPdfAction.caption"/>
                        </actions>
                    </popupButton>
                    <popupButton id="iconAlignTopPopupButton"
                                 caption="icon-align-top"
                                 icon="SAVE"
                                 stylename="icon-align-top">
                        <actions>
                            <action id="saveAsDocAction"
                                    caption="msg://io.jmix.sampler.screen.ui.components.popupbutton.simple/saveAsDocAction.caption"/>
                            <action id="saveAsPdfAction"
                                    caption="msg://io.jmix.sampler.screen.ui.components.popupbutton.simple/saveAsPdfAction.caption"/>
                        </actions>
                    </popupButton>
                    <label value="icon-only:"/>
                    <popupButton id="iconOnlyPopupButton"
                                 caption="icon-only"
                                 icon="SAVE"
                                 stylename="icon-only">
                        <actions>
                            <action id="saveAsDocAction"
                                    caption="msg://io.jmix.sampler.screen.ui.components.popupbutton.simple/saveAsDocAction.caption"/>
                            <action id="saveAsPdfAction"
                                    caption="msg://io.jmix.sampler.screen.ui.components.popupbutton.simple/saveAsPdfAction.caption"/>
                        </actions>
                    </popupButton>
                </groupBox>
            </groupBox>
            <vbox spacing="true">
                <groupBox caption="Border styles"
                          spacing="true">
                    <hbox spacing="true">
                        <button caption="borderless"
                                stylename="borderless"/>
                        <button caption="borderless-colored"
                                stylename="borderless-colored"/>
                        <button caption="quiet"
                                stylename="quiet"/>
                    </hbox>
                </groupBox>
                <groupBox caption="Action styles"
                          spacing="true">
                    <hbox spacing="true">
                        <button caption="primary"
                                stylename="primary"/>
                        <button caption="friendly"
                                stylename="friendly"/>
                        <button caption="danger"
                                stylename="danger"/>
                    </hbox>
                </groupBox>
            </vbox>
        </hbox>
        <label id="spacer"/>
    </layout>
</window>